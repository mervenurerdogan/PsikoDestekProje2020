
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .modal-header, h4, .close {
            background-color: #81c3e0;
            color: white !important;
            text-align: center;
            font-size: 30px;
        }

        .modal-footer {
            background-color: #81c3e0;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Doktor Giriş Yap</h2>
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-default btn-lg" id="myBtn">Giriş Yap</button>
        <br />
        <br />
        <h3 style="color:red;">@ViewBag.HataMesaji</h3>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span> Doktor Giriş Yap</h4>

                    </div>
                    <div class="modal-body" style="padding:40px 50px;">

                        @using (Html.BeginForm("DoktorGirisYap", "DoktorLogin", FormMethod.Post))
                        {


                            <div class="form-group">
                                <label for="DoktorMail"><span class="glyphicon glyphicon-user"></span> Mail Adresi</label>
                                <input type="text" class="form-control" name="DoktorMail" placeholder="Mail Adresinizi Girin">
                            </div>
                            <div class="form-group">
                                <label for="DoktorSifre"><span class="glyphicon glyphicon-eye-open"></span> Şifre</label>
                                <input type="password" class="form-control" name="DoktorSifre" placeholder="Şifrenizi Girin">
                            </div>

                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Giriş Yap</button>
                        }



                    </div>
                    <div class="modal-footer">

                        <p>Hesabınız Yok Mu? <a href="#">Kayıt Ol</a></p>
                        <p>Şifremi  <a href="#">Unuttum</a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });
        });
    </script>

</body>
</html>

